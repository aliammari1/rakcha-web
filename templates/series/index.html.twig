{% extends 'base.html.twig' %}

{% block title %}Series index{% endblock %}

{% block body %}
    <h1>Series index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idserie</th>
                <th>Nom</th>
                <th>Resume</th>
                <th>Directeur</th>
                <th>Pays</th>
                <th>Image</th>
                <th>Liked</th>
                <th>Nblikes</th>
                <th>Disliked</th>
                <th>Nbdislikes</th>
                <th>Idcategorie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for series in series %}
            <tr>
                <td>{{ series.idserie }}</td>
                <td>{{ series.nom }}</td>
                <td>{{ series.resume }}</td>
                <td>{{ series.directeur }}</td>
                <td>{{ series.pays }}</td>
                <td>{{ series.image }}</td>
                <td>{{ series.liked }}</td>
                <td>{{ series.nblikes }}</td>
                <td>{{ series.disliked }}</td>
                <td>{{ series.nbdislikes }}</td>
                <td>{{ series.idcategorie }}</td>
                <td>
                    <a href="{{ path('app_series_show', {'idserie': series.idserie}) }}">show</a>
                    <a href="{{ path('app_series_edit', {'idserie': series.idserie}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_series_new') }}">Create new</a>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Feedback{% endblock %}

{% block body %}
    <h1>Feedback</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ feedback.id }}</td>
            </tr>
            <tr>
                <th>IdUser</th>
                <td>{{ feedback.idUser }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ feedback.description }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ feedback.date ? feedback.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>IdEpisode</th>
                <td>{{ feedback.idEpisode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_feedback_index') }}">back to list</a>

    <a href="{{ path('app_feedback_edit', {'id': feedback.id}) }}">edit</a>

    {{ include('feedback/_delete_form.html.twig') }}
{% endblock %}

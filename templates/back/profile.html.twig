            document.getElementById('friendRequestContainer').innerHTML = '<button id="acceptFriendRequestBtn" class="btn btn-danger btn-sm ms-auto me-4">Accept Friend Request</button><button id="rejectFriendRequestBtn" class="btn btn-danger btn-sm ms-auto me-4">Reject Friend Request</button>';
            document.getElementById("acceptFriendRequestBtn").addEventListener('click', function () {
                fetch("{{ path('accept_friend_request') }}", {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify(
                        {'receiver': {{ user.id }}}
                    )
                }).then(response => response.json()).then(data => {
                    console.log(data);
                    if (data.success) {
                        document.getElementById('friendRequestContainer').innerHTML = '<button id="sendFriendRequestBtn" class="btn btn-danger btn-sm ms-auto me-4">Send Friend Request</button>';
                    }
                });
            });
            document.getElementById("rejectFriendRequestBtn").addEventListener('click', function () {
                fetch("{{ path('reject_friend_request') }}", {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest'
                    },
                    body: JSON.stringify(
                        {'receiver': {{ user.id }}}
                    )
                }).then(response => response.json()).then(data => {
                    console.log(data);
                    if (data.success) {
                        document.getElementById('friendRequestContainer').innerHTML = '<button id="sendFriendRequestBtn" class="btn btn-danger btn-sm ms-auto me-4">Friends</button>';
                    }
                });
            });

        </script>
    {% endif %}

                                                method: form.getAttribute("method"),
                                                body: data,
                                                headers: {
                                                    "Content-Type": "application/x-www-form-urlencoded; charset:UTF-8"
                                                }
                                            }).then(response => response.text()).then(html => {
                                                let content = document.createElement("html");
                                                content.innerHTML = html;
                                                let nouveauSelectSalle = content.querySelector("#seance_idSalle");
                                                let nouveauSelectFilm = content.querySelector("#seance_idFilm");
                                                document.querySelector("#seance_idSalle").replaceWith(nouveauSelectSalle);
                                                document.querySelector("#seance_idFilm").replaceWith(nouveauSelectFilm);

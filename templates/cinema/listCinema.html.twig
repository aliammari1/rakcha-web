{% extends 'baseFront.html.twig' %}

{% block pageStyle %}
	<link href="{{ asset('/css/about.css') }}" rel="stylesheet">
    <style>
        .cardBox {
            width: 355px;
            height: 355px;
            position: relative;
            display: grid;
            place-items: center;
            overflow: hidden;
            border-radius: 20px;
            box-shadow: rgba(0, 0, 0, 0.4) 0px 2px 10px 0px,
              rgba(0, 0, 0, 0.5) 0px 2px 25px 0px;
            margin-right: 85px; /* Ajouter une marge Ã  droite */
            margin-bottom: 20px; /* Ajouter une marge en bas */
          }
          

.card {
  position: absolute;
  width: 355px;
  height: 355px;
  background: #19191a;
  border-radius: 20px;
  z-index: 5;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  text-align: center;
  color: #ffffff;
  overflow: hidden;
  padding: 20px;
  cursor: pointer;
  box-shadow: rgba(0, 0, 0, 0.4) 0px 30px 60px -12px inset,
    rgba(0, 0, 0, 0.5) 0px 18px 36px -18px inset;
    border: 3px solid red; /* Ajouter un border initial transparent */
 
}

.card img {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.card:hover img {
  display: none;
  background: #ffffff; /* Change background color to white */
}

.card .content .h3 {
  font-size: 30px;
  font-weight: 800;
  margin-bottom: 10px;
}

.card .content p {
  font-size: 26px;
  line-height: 1.4em;
}

.card .content {
  position: relative; /* Set position to relative */
  transform: translateY(100%);
  opacity: 0;
  transition: 0.3s ease-in-out;
}

svg {
  position: absolute;
  bottom: -80px; /* Adjust vertical position as needed */
  left: 200px; /* Adjust horizontal position as needed */
  height: 50px;
  width: 50px;
}

.card:hover .content {
  transform: translateY(0);
  opacity: 1;
}

.card:hover {
  width: 340px;
  height: 340px;
  border: 2px solid transparent; /* Ajouter un border initial transparent */

}

.card:hover .h4 {
  opacity: 0;
}

.cardBox::before {
  content: "";
  position: absolute;
  width: 40%;
  height: 150%;
  background: red;
  background: -webkit-linear-gradient(to right, red, black, beige);
  background: linear-gradient(to right, red, black);
  transform-origin: center;
  animation: glowing_401 5s linear infinite;
}

@keyframes glowing_401 {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(360deg);
  }
}

.planning {
  background: white;
  color: black;
  margin-top: 20px;
  border: none;
  border-radius: 20px;
  font-size: 1.5rem;
  padding: 0.4rem 0.6rem;
  box-shadow: rgba(165, 132, 130, 0.1333333333) 0px 5px 5px 0px;
}

.planning:hover {
  background: red;
  color: white;
}





    </style>
{% endblock %}


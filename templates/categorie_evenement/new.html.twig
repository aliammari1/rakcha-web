{% extends 'baseBack.html.twig' %}

{% block title %}New CategorieEvenement{% endblock %}

{% block body %}
<div class="row mt-3">
    <div class="col-md-12">
        <a href="{{ path('app_categorie_evenement_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
</div>

<div class="container mt-5">
    <h1 class="mb-4"><i class="fas fa-plus-circle text-primary mr-2"></i>Create New CategorieEvenement</h1>

    <div class="card border-primary shadow-sm">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
            <div class="form-group">
                <label for="nomCategorie"><i class="fas fa-tag text-primary mr-2"></i>Nom:</label>
                {{ form_widget(form.nomCategorie, {'attr': {'class': 'form-control', 'placeholder': 'Enter category name'}}) }}
                {% if form.nomCategorie.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {% for error in form.nomCategorie.vars.errors %}
                            <i class="fas fa-exclamation-circle"></i> {{ error.message }}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                <label for="description"><i class="fas fa-align-left text-primary mr-2"></i>Description:</label>
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter category description'}}) }}
                {% if form.description.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {% for error in form.description.vars.errors %}
                            <i class="fas fa-exclamation-circle"></i> {{ error.message }}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

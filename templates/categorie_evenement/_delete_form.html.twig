<form method="post" action="{{ path('app_categorie_evenement_delete', {'id': categorie_evenement.id}) }}" onsubmit="return confirmDelete();">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie_evenement.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>

<script>
    function confirmDelete() {
        if (confirm('Are you sure you want to delete this item?')) {
            return true;
        } else {
            return false;
        }
    }
</script>

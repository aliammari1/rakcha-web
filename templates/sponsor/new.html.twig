{% extends 'baseBack.html.twig' %}

{% block title %}New Sponsor{% endblock %}

{% block body %}
<div class="mt-4">
    <a href="{{ path('app_sponsor_index') }}" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i>
    </a>
</div>

<div class="container mt-5">
    <h1 class="mb-4"><i class="fas fa-plus-circle text-primary mr-2"></i>Create New Sponsor</h1>

    <div class="card shadow">
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

            <div class="form-group">
                <label for="nomsociete"><i class="fas fa-user text-primary mr-2"></i>Name:</label>
                {{ form_widget(form.nomsociete, {'attr': {'class': 'form-control', 'placeholder': 'Enter sponsor name'}}) }}
                {% if form.nomsociete.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {% for error in form.nomsociete.vars.errors %}
                            <i class="fas fa-exclamation-circle"></i> {{ error.message }}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                <label for="logo"><i class="fas fa-image text-primary mr-2"></i>Logo:</label>
                {{ form_widget(form.logo, {'attr': {'class': 'form-control', 'placeholder': 'Select sponsor logo'}}) }}
                {% if form.logo.vars.errors|length > 0 %}
                    <div class="invalid-feedback">
                        {% for error in form.logo.vars.errors %}
                            <i class="fas fa-exclamation-circle"></i> {{ error.message }}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% extends 'baseFront.html.twig' %}

{% block pageStyle %}
    <link href="{{ asset('css/index.css') }}" rel="stylesheet">
    <style>
        /* Your provided CSS styles */
        .event-card {
            border: none;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .event-card img {
            width: 100%;
            height: auto;
            transition: opacity 0.3s ease-in-out;
        }

        .event-card:hover img {
            opacity: 0.7;
        }

        .card-text-content {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 15px;
            transition: bottom 0.3s ease-in-out;
        }

        .event-card:hover .card-text-content {
            bottom: -70px;
        }

        .card-footer {
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        .card-footer a {
            color: #fff;
            text-decoration: none;
            transition: color 0.3s ease-in-out;
        }

        .card-footer a:hover {
            color: #f8f9fa;
        }

        .event-title {
            font-size: 1.2em;
            margin-bottom: 5px;
        }

        .event-details {
            margin-bottom: 10px;
        }
    </style>
{% endblock %}

{% block title %}Sponsor {% endblock %}

{% block body %}
<body>
    {{ block("header") }}
    
    <div class="container mt-5">
        <h1 class="mb-4"><i class="fas fa-users text-primary mr-2"></i>Sponsor Index</h1>

        <!-- Sort Form -->
        <form action="{{ path('app_sponsor_index') }}" method="get" class="mb-4">
            <!-- ... -->
        </form>

        <!-- Search Form -->
        <form action="{{ path('app_sponsor_index') }}" method="get" class="mb-4">
            <!-- ... -->
        </form>

        <div class="row">
            {% for sponsor in sponsors %}
                <div class="col-md-4 mb-4">
                    <div class="card event-card">
                        
                            <img class="img-fluid" src="{{ sponsor.logo }}" alt="{{ sponsor.nomsociete }}">
                      
                        <div class="card-text-content">
                            <p class="event-title"><strong>Nom société:</strong> {{ sponsor.nomsociete }}</p>
                            <div class="event-details">
                               
                              
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col">
                    <p>Aucun sponsor trouvé</p>
                </div>
            {% endfor %}
        </div>
    </div>
</body>

{% endblock %}

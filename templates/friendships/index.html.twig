{% extends 'base.html.twig' %}

{% block title %}Friendships index{% endblock %}

{% block body %}
    <h1>Friendships index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for friendship in friendships %}
            <tr>
                <td>{{ friendship.id }}</td>
                <td>
                    <a href="{{ path('app_friendships_show', {'id': friendship.id}) }}">show</a>
                    <a href="{{ path('app_friendships_edit', {'id': friendship.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_friendships_new') }}">Create new</a>
{% endblock %}

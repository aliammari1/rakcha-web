{% extends 'baseFront.html.twig' %}

{% block pageStyle %}
    <link href="{{ asset('css/index.css') }}" rel="stylesheet">
    <style>
        .event-details-card {
            border: none;
            cursor: default;
            position: relative;
            overflow: hidden;
        }

        .event-details-card img {
            width: 100%;
            height: auto;
            transition: opacity 0.3s ease-in-out;
        }

        .event-details-card:hover img {
            opacity: 0.7;
        }

        .card-text-content {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 15px;
            transition: bottom 0.3s ease-in-out;
        }

        .event-details-card:hover .card-text-content {
            bottom: -70px;
        }

        .card-footer {
            background-color: rgba(0, 0, 0, 0.7);
            color: #fff;
            padding: 10px;
            text-align: center;
        }

        .card-footer a {
            color: #fff;
            text-decoration: none;
            transition: color 0.3s ease-in-out;
        }

        .card-footer a:hover {
            color: #f8f9fa;
        }

        .event-title {
            font-size: 1.6em;
            margin-bottom: 5px;
        }

        .event-details {
            margin-bottom: 10px;
        }

        .back-btn {
            margin-top: 20px;
        }
    </style>
{% endblock %}

{% block title %}Event Details{% endblock %}

{% block body %}
    <body>
        {{ block("header") }}

        <div class="container mt-5">
            <h1 class="mb-4"><i class="fas fa-calendar-alt text-primary mr-2"></i>Event Details</h1>

            <div class="card shadow-lg border-primary event-details-card">
                <img class="card-img-top" src="{{ evenement.afficheEvent }}" alt="{{ evenement.nom }}">
                <div class="card-text-content">
                    <h5 class="event-title">{{ evenement.nom }}</h5>
                    <div class="event-details">
                        <p><strong>Category :</strong> {{evenement.idCategorie ? evenement.idCategorie.nomCategorie : 'Non spécifié' }}</p>
                        <p><strong>Start Date :</strong> {{ evenement.datedebut ? evenement.datedebut|date('Y-m-d') : 'Non spécifié' }}</p>
                        <p><strong>End Date :</strong> {{ evenement.datefin ? evenement.datefin|date('Y-m-d') : 'Non spécifié' }}</p>
                        <p><strong>Location :</strong> {{ evenement.lieu ? evenement.lieu : 'Non spécifié' }}</p>
                        <p><strong>Status :</strong> {{ evenement.etat ? evenement.etat : 'Non spécifié' }}</p>
                        <p><strong>Description :</strong> {{ evenement.description ? evenement.description : 'Non spécifié' }}</p>
                    </div>
                </div>
               
            </div>
           
        </div>
    </body>
{% endblock %}
